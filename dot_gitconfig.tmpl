[user]
	name = {{ .name | quote }}
	email = {{ .email | quote }}
	signingkey = "~/.ssh/id_ed25519.pub"
[core]
	autocrlf = input
	editor = vim
[push]
	default = current
[fetch]
	prune = true
[pull]
	rebase = true
[rebase]
	autostash = true
	autosquash = true
[alias]
	nah = "!git reset --hard && git clean -df"
	undo = "reset --soft HEAD~1"
	amend = "commit --amend --no-edit"
	unstash = "stash pop"
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[init]
	defaultBranch = main
[commit]
	gpgsign = true
[gpg]
	format = ssh
[tag]
	gpgSign = true
[gpg "ssh"]
	allowedSignersFile = /home/jasmin/.config/git/allowed_signers
