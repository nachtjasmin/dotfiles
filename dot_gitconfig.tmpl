[user]
	name = {{ .name | quote }}
	email = {{ .email | quote }}
	signingkey = "~/.ssh/id_ed25519.pub"
[core]
	autocrlf = input
	editor = vim
	excludesfile = "~/.config/git/gitignore"

	# Don't escape umlauts and other unicode-letters of filenames
	quotePath = false
	precomposeunicode = true # only used on macOS
[push]
	default = current
[fetch]
	prune = true
[pull]
	rebase = true
[rebase]
	autostash = true
	autosquash = true
[alias]
	nah = "!git reset --hard && git clean -df"
	undo = "reset --soft HEAD~1"
	amend = "commit --amend --no-edit"
	unstash = "stash pop"
	push-with-mr = "push -o merge_request.create -o merge_request.remove_source_branch"
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[init]
	defaultBranch = main
[commit]
	gpgsign = true
[gpg]
	format = ssh
[tag]
	gpgSign = true
[help]
	# Auto-correct Git typos, leaving one second to interrupt the suggestion with Ctrl+C.
	# Found here: https://wikis.world/@LucasWerkmeister/110865161641795531
	autocorrect = 10
# Setup delta as the diff tool and use the same theme as "bat".
[core]
	pager = delta
[merge]
	conflictstyle = zdiff3
[interactive]
	diffFilter = delta --color-only
[delta]
	line-numbers = true
	relative-paths = true
	file-decoration-style = blue box
	syntax-theme = none
	commit-decoration-style = blue ol
	hunk-header-style = line-number
	hunk-header-decoration-style = ul
	hunk-label = "line"
	inline-hint-style = omit
	minus-style = red
	plus-style = green
	plus-emph-style = green normal bold
	minus-emph-style = red strike

